import mx.events.EventDispatcher;
import mx.utils.Delegate;

import com.greensock.TweenMax;
import com.greensock.easing.*;

import exchange.sections.ScreenMC;
import exchange.sections.five_minutes_with.CarouselSlider;

////////////////////////////////////////////////////////////////////////////////
// CLASS: FiveMinutesWith 
////////////////////////////////////////////////////////////////////////////////
class exchange.sections.five_minutes_with.FiveMinutesWith extends ScreenMC
{
	
	////////////////////////////////////////////////////////////////////////////
	// PROPERTIES
	////////////////////////////////////////////////////////////////////////////
	public var headerText0		: MovieClip;
	public var headerText1		: MovieClip;
	public var headerText3		: MovieClip;
	public var image_mc			: MovieClip;
	public var boxout_mc		: MovieClip;
	public var carousel_mc		: MovieClip;
	
	private var offx 			: Number = 980;
	////////////////////////////////////////////////////////////////////////////
	// Constructor
	////////////////////////////////////////////////////////////////////////////
	public function FiveMinutesWith()
	{		
		super();
		page_name = "five_minutes_with";
	}

	////////////////////////////////////////////////////////////////////////////
	// Initialise
	///////////////////////////////////////////////////////////////////////////
	public function initPage() : Void
	{
		findObjects(this);
		hideAssets();
	}
	
	////////////////////////////////////////////////////////////////////////////
	// Hide on stage assets
	///////////////////////////////////////////////////////////////////////////
	public function hideAssets() : Void
	{
		headerText0._alpha = 0;
		headerText1._alpha = 0;
		headerText3._alpha = 0;
		
		image_mc._y = 600;
		carousel_mc._y = 600;
		
	}	

	////////////////////////////////////////////////////////////////////////////
	// Show assets
	///////////////////////////////////////////////////////////////////////////		
	public function showAssets( ) : Void
	{
		var dtime : Number = 0;
		
		carousel_mc.showFirstSlide();
	
		TweenMax.to(headerText0, 1, { _alpha:100, ease:Linear.easeNone } );
		TweenMax.to(headerText1, 1, { _alpha:100, ease:Linear.easeNone, delay:dtime+=.4} );
		TweenMax.to(headerText3, 1, { _alpha:100, ease:Linear.easeNone, delay:dtime += .4 } );
		
		TweenMax.to(carousel_mc, 1, { _y:carousel_mc.iv._y, ease:Cubic.easeOut, delay:dtime += 1 } );
		
		TweenMax.to(image_mc, 1, { _y:image_mc.iv._y, ease:Cubic.easeOut, delay:dtime+=.6 } );

	}
	
}